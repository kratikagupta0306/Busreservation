#include <iostream>
#include <string.h>
using namespace std;
class bus
{
    string busn, drivern, from, to, date, arrival, departure;
    int busno, seatno, total_no_of_seats;

public:
    void display();
    void addbus();
    void busdisp();
    void seatchart();
    void passengerinfo();
    void ticket();
};
void bus::display()
{
    int choice;
    cout << "                                 BUS TICKET BOOKING ONLINE\n";
    cout << "                             -----------------------------------\n\n";
    cout << "                             1. Add Bus\n";
    cout << "                             2. Bus Reservation\n";
    cout << "                             3. Show Seat Chart\n";
    cout << "                             4. Exit\n";
    cout << "                             ENTER CHOICE:";
    cin >> choice;
    switch (choice)
    {
    case 1:
    {
        bus::addbus(); 
        break;
    }
    case 2:
    {
        bus::busdisp(); // not complete case statements 
        break;
    }
    case 3:
    {
        bus::seatchart();
        break;
    }
    case 4:
    {
        break;
    }
    default:
    {
        cout << "                            ERROR! Please enter a valid choice.\n";
        bus::display();
        break;
    }
    }
}
void bus::addbus()
{
 cout<<"\n\t\t Enter Driver's name";
 cin>>(drivern);
 cout<<"\n\t\t Enter bus no"<<endl;
 cin>>busno;
 cout<<"\n\t\t Arrival time:";
 cin>>(arrival);
 cout<<"\n\t\t  Departure:";
 cin>>(departure);
 cout<<"\n\t\t from:";
 cin>>(from);
 cout<<"\n\t\t to:";
 cin>>(to);
 }
